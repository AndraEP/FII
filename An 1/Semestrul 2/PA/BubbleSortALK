swap (out a, i, j)
{
    temp = a[i];
    a[i] = a[j];
    a[j] = temp;
}

bubblesort (out a, n)
{
    gata = 0;
    while (gata == 0)
    {
        gata = 1;
        for (i = 0; i < n-1; ++i)
        {
            if (a[i] > a[i+1])
            {
                swap (a, i, i+1);
                gata = 0;
            }
        }
        --n;
    }
}

bubblesort (a, n);

/*
alki bubblesort.alk --init="n |-> 10 a |-> [5,7,1,6,9,3,2,10,4,8]"
